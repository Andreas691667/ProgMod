class TorqueMotor

instance variables
    torquePort : RealPort;
    statePort : StringPort;

operations

    public TorqueMotor : RealPort*StringPort ==> TorqueMotor
    TorqueMotor(rp, sp) == (
        torquePort := rp;
        statePort := sp;
    );

    public SetTorque : real ==> ()
    SetTorque(tau) == duration(0) (
        torquePort.setValue(tau);        
    );

    public MotorFailed : () ==> ()
    MotorFailed() == duration(0) (
        statePort.setValue("Failed");
    );

    public GetMotorState : () ==> seq of char
    GetMotorState() == duration(0) (
        return statePort.getValue();
    );

    public LockMotor : () ==> ()
    LockMotor() == duration(0) (
        torquePort.setValue(0);
    );

end TorqueMotor